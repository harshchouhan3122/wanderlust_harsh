<% layout('/layouts/boilerplate') -%>

<style>
    .tax-info{
        display: none;
        /* display: inline; */
    }

</style>



<body>
    <!-- <= successMsg %> Its mentioned in include through layout -->  
    
    <!-- <h3 class="mb-4">All Listings</h3> -->

    <!-- <form method="GET" action="/listings/new">
        <button>Add New Listing</button>
    </form> -->

    <div id="filters" class="mb-2 ">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house"></i></div>
            <p>Cabins</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beachfront</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-warehouse"></i></div>
            <p>Mansions</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lake</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Housboats</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Top Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>

        <div id="tax-switch" class="ms-auto">
            <div class="form-check-reverse form-switch">
                <label class="form-check-label" for="flexSwitchCheckDefault">Total price with Tax</label>
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            </div>
        </div>
        
    </div>



    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

        <% for (let listing of allListings) { %>

            <a href="/listings/<%=listing.id%>" class="listing-link" >
                <div class="card col listing-card" >

                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;" onerror="this.onerror=null; this.src='/icons/imageLoader.png';">
                    <div class="card-img-overlay">  </div>

                    <div class="card-body">
                        <p class="card-text">
                            <b> <%= listing.title %> </b> <br>
                            &#8377; <span class="price"><%= listing.price.toLocaleString("en-IN") %></span> / night &nbsp; &nbsp; <span class="tax-info"> + <i>18%</i> GST </span> <br>
                            <%= listing.location %>, <%= listing.country %> <br>
                        </p>
                    </div> 

                </div>
            </a>

        <% } %>
        
    </div>


    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click", ()=>{
            // console.log('Clicked');
            let taxInfo = document.getElementsByClassName("tax-info");

            for(info of taxInfo) {
                if (info.style.display != 'inline') {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>

</body>

